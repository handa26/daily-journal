<%- include("partials/header") -%>

<div class="container post-content mt-4">
  <h1 style="color: #1abc9c;">Compose</h1>
  <form class="mt-4" action="/compose" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" id="title" type="text" name="title" required />
    </div>
    <div class="form-group">
      <label for="post">Post</label>
      <textarea class="form-control" id="post" name="post" required></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>
</div>


<%- include("partials/footer") -%>
